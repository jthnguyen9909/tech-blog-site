<div class="row">
  <div class="card">
    <form class="log-in-form">
      <h4 class="text-center">Log in</h4>
      <label>Username
        <input
          id="username-input"
          type="text"
          placeholder="Enter your username here"
        />
      </label>
      <label>Password
        <input
          id="password-input"
          type="password"
          placeholder="Enter your password here"
        />
      </label>
      <button class="button login-button" id="login-button">Login</button>
    </form>
    <div>
      <p>Don't have an account?</p>
      <a href="/signup">Sign up here!</a>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>